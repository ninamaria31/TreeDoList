{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "treeNode": {
      "type": "object",
      "properties": {
        "uuid": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": ["string", "null"]
        },
        "completed": {
          "type": "boolean"
        },
        "modified": {
          "type": "integer"
        },
        "deleted": {
          "type": ["integer", "null"]
        },
        "priority": {
          "type": "integer",
          "minimum": 0,
          "maximum": 2
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/treeNode"
          }
        }
      },
      "required": ["uuid", "name", "completed", "modified", "priority", "children"],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "root": {
      "$ref": "#/definitions/treeNode"
    }
  },
  "required": ["root"],
  "additionalProperties": false
}
